<div class="container">
  <h1>Edytuj pokój</h1>

  <%= form_for @room do |f| %>
    <div class="form-group">
      <strong>Nazwa pokoju:</strong>
      <%= @room.name %>
    </div>

    <div class="form-group">
      <h2>Dodaj użytkowników do pokoju:</h2>
      <%= f.collection_check_boxes :user_ids, User.all, :id, :email do |b| %>
        <div class="form-check">
          <%= b.check_box(class: "form-check-input") %>
          <%= b.label(class: "form-check-label") %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.submit "Zapisz zmiany", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div>
    <%= link_to "Wstecz", rooms_path, class: "btn btn-secondary" %>
  </div>
</div>
