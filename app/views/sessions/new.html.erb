<div class="container">
  <h1>Zaloguj się</h1>

  <%= form_with url: login_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <br>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <br>

    <div class="form-group">
      <%= f.submit "Zaloguj się", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div>
    <%= link_to "Rejestracja", new_user_path, class: "btn btn-secondary" %>
  </div>
</div>
